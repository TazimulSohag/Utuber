<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.banglabs.utuber.Tag">




    <LinearLayout
        android:id="@+id/search_section"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_toLeftOf="@+id/user_search_btn_id"
            android:layout_weight="4.8"
            android:padding="5dp">

            <EditText
                android:visibility="visible"
                android:layout_marginVertical="1dp"
                android:paddingLeft="10dp"
                android:id="@+id/user_tag_search_box_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_white"
                android:focusable="false"
                android:drawableRight="@drawable/ic_close_black_24dp"
                android:hint="Search on Youtube"
                android:paddingRight="8dp"
                android:textSize="18sp"



                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:maxLines="1"
                android:ellipsize="end"


                />



        </RelativeLayout>


        <ImageButton
            android:layout_marginHorizontal="2dp"
            android:id="@+id/tag_url_pest_btn_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:layout_marginVertical="4dp"
            android:background="@drawable/rounded_white"
            android:src="@drawable/pest_logo" />

        <ImageButton
            android:id="@+id/tag_search_btn_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="4dp"
            android:layout_weight=".6"
            android:background="@drawable/rounded_white"
            android:src="@drawable/search_logo"
            android:tint="@color/youtube_red" />


    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/search_section"
        android:layout_above="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginVertical="20dp"
                android:id="@+id/tag_msg"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/youtube_red">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Tags"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"
                    android:gravity="center"/>
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_width="45dp"
                    android:padding="10dp"
                    android:rotation="270"
                    android:layout_height="match_parent"
                    android:src="@drawable/tag"
                    android:tint="@color/white"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/tag_list"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="#D6D4D4"
                android:layout_below="@id/tag_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">

                <include layout="@layout/content_main" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <Button
                android:layout_below="@id/tag_list"
                android:id="@+id/tag_copy_id"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:layout_marginVertical="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_white"
                android:text="copy"
                android:textStyle="bold"
                android:drawableRight="@drawable/copy_logo"
                android:textColor="@color/youtube_red"
                android:textSize="22sp"
                />
        </RelativeLayout>


    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        app:menu="@menu/navigation_item"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@drawable/backgrand_nav_item"
        app:itemIconTint="@drawable/navigation_item_selector"
        app:itemTextColor="@drawable/navigation_item_selector"
        />
</RelativeLayout>