<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/one"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:elevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/one_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/logo1"
                    android:src="@mipmap/tube_optimizer"
                    android:scaleType="fitCenter"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/logo1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="28dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Increase your YouTube experience"
                        android:textStyle="normal"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/one_three"
                android:layout_marginTop="-20dp"
                android:layout_below="@+id/one_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/logo3"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/copyright_logo"
                    android:padding="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/logo3"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copyright"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banglabs 2020"
                        android:textStyle="normal"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/one_two"
                android:layout_marginTop="-10dp"
                android:layout_below="@id/one_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/about_us"
                    android:padding="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/logo2"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.4"
                        android:textStyle="normal"/>

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/two"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:padding="25dp"
        android:layout_below="@id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout">

        <WebView
            android:id="@+id/about_us_view_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </WebView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:padding="25dp"
        android:layout_below="@id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout">

        <WebView
            android:id="@+id/about_us_view_id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </WebView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>



</ScrollView>
