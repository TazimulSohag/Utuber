<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    android:layout_marginHorizontal="15dp"
    android:layout_gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe Now"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textColor="@color/youtube_red"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/email_box_id"
        android:background="@drawable/rounded_white"
        android:textColor="@color/youtube_red"
        android:textStyle="bold|italic"
        android:hint="Example@dumy.com"
        android:textColorHint="#F7A0A0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="3dp"
        android:text=""/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/email_send_id"
            android:layout_width="0dp"
            android:textSize="22sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/less_rounded_red"
            android:textColor="@color/white"
            android:text="Subscribe"
            android:textAllCaps="false"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/email_exit_id"
            android:layout_width="0dp"
            android:textSize="22sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/less_rounded_red"
            android:textColor="@color/white"
            android:text="Exit"
            android:textAllCaps="false"
            android:layout_marginHorizontal="5dp"/>



    </LinearLayout>


</LinearLayout>